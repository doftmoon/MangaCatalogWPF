<Window x:Class="MangaCatalog.View.AddCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaCatalog.View"
        mc:Ignorable="d"
        Title="AddCommentWindow" Height="350" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Add Comment" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="CommentTextBox" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="Comment" VerticalAlignment="Top" Width="200" FontSize="14" Height="150"/>
        <Button Content="Add" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Height="20" Width="60" FontSize="14" Click="addCommentButton_Click"/>

    </Grid>
</Window>
